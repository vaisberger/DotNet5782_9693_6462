        <Button x:Name="BaseStation" Content="Base Station" Grid.Column="1" HorizontalAlignment="Left" Margin="77,440,0,0" VerticalAlignment="Top" Height="122" Width="241" FontSize="22" Click="BaseStation_Click"/>



    </Grid>
</Window>

